<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivStepperMinus"
        android:layout_width="@dimen/stepper_width_button"
        android:layout_height="match_parent"
        android:background="@drawable/selector_stepper_button"
        android:clickable="true"
        android:padding="@dimen/stepper_padding_button"
        android:scaleType="centerInside"
        android:src="@drawable/icon_step_minus" />

    <ImageView
        android:id="@+id/ivStepperPlus"
        android:layout_width="@dimen/stepper_width_button"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_stepper_button"
        android:clickable="true"
        android:padding="@dimen/stepper_padding_button"
        android:scaleType="centerInside"
        android:src="@drawable/icon_step_plus" />

    <TextView
        android:id="@+id/tvStepperContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ivStepperPlus"
        android:layout_toRightOf="@id/ivStepperMinus"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/color_3B3F47"
        android:textSize="@dimen/stepper_textSize"
        tools:text="100" />


</RelativeLayout>